<% include ../partials/header %>

    <div class="row">
        <h1 style="text-align: center;">Add New Comment to <%= park.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/parks/<%= park._id %>/comments" method="POST">
                <div class="form-group">
                    <textarea class="form-control" id="comment" placeholder="Comment" name="comment[text]" rows="10px"></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/parks">Go back</a>
        </div>
    </div>

<% include ../partials/footer %>