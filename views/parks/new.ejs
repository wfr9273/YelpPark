<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Create a new park</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/parks" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="Name" name="name">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" placeholder="Price" name="price" min="0.0" step="0.01">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="Image url" name="image">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="Description" name="description">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="location" placeholder="location">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/parks">Go back</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>